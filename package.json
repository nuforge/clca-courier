{
  "name": "clca-courier",
  "version": "0.0.1",
  "description": "The Courier @ Conashaugh Lakes.com",
  "productName": "The Courier at Conashaugh Lakes",
  "author": "nuForge <nuforge@gmail.com>",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint -c ./eslint.config.js \"./src*/**/*.{ts,js,cjs,mjs,vue}\"",
    "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "dev": "quasar dev",
    "build": "quasar build",
    "build:prod": "cross-env NODE_OPTIONS=\"--max-old-space-size=16384\" quasar build",
    "deploy": "quasar build && firebase deploy",
    "deploy:hosting": "quasar build && firebase deploy --only hosting",
    "setup-deployment": "pwsh ./scripts/setup-deployment.ps1",
    "postinstall": "quasar prepare",
    "extract-metadata": "node scripts/extract-pdf-metadata.js",
    "extract-metadata-simple": "node scripts/extract-metadata-simple.js",
    "generate-thumbnails": "node scripts/generate-thumbnails.js",
    "setup-newsletters": "npm run extract-metadata && npm run generate-thumbnails",
    "test-newsletter-archive": "node scripts/test-newsletter-archive.js",
    "create-admin": "node scripts/secure-admin-creator.js"
  },
  "dependencies": {
    "@firebase/auth": "^1.11.0",
    "@firebase/firestore": "^4.9.1",
    "@firebase/functions": "^0.13.1",
    "@firebase/storage": "^0.14.0",
    "@pdftron/webviewer": "^11.6.1",
    "@quasar/extras": "^1.16.4",
    "@types/dompurify": "^3.0.5",
    "axios": "^1.2.1",
    "dompurify": "^3.2.6",
    "firebase": "^12.2.1",
    "firebase-admin": "^13.5.0",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.1.91",
    "pinia": "^3.0.1",
    "quasar": "^2.16.0",
    "react-icons": "^5.5.0",
    "vue": "^3.4.18",
    "vue-i18n": "^11.0.0",
    "vue-router": "^4.0.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@firebase/rules-unit-testing": "^5.0.0",
    "@intlify/unplugin-vue-i18n": "^4.0.0",
    "@quasar/app-vite": "^2.1.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@types/node": "^20.5.9",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.4.0",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.2",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.2",
    "eslint": "^9.14.0",
    "eslint-plugin-vue": "^9.30.0",
    "fake-indexeddb": "^6.2.2",
    "firebase-tools": "^14.15.2",
    "globals": "^15.12.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^26.1.0",
    "msw": "^2.11.1",
    "prettier": "^3.3.3",
    "typescript": "~5.5.3",
    "vite-plugin-checker": "^0.9.0",
    "vitest": "^3.2.4",
    "vue-tsc": "^2.0.29"
  },
  "engines": {
    "node": "^28 || ^26 || ^24 || ^22 || ^20 || ^18",
    "npm": ">= 6.13.4",
    "yarn": ">= 1.21.1"
  }
}
